<%- include('partials/header'); -%>
    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if(blogs.length>0){ %>
            <% blogs.forEach((blog)=>{ %>
                <a class="single" href="/blogs/<%= blog._id %>">
                    <h3>
                        <%= blog.title %>
                    </h3>
                    <p>
                        <%= blog.snippet %>
                    </p>
                    <br>
                </a>
                <% }) %>
                    <% }else{ %>
                        <p>Theres no Blog to Display...</p>
                        <% } %>
    </div>
    <%- include('partials/footer') -%>